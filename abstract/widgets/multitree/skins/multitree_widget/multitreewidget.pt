<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="abstract.widgets.multitree">

  <body>

    <metal:view_macro define-macro="view"
                      tal:define="vocab python:field.Vocabulary(here);
                                  value python:accessor();
                                  display python:context.displayValue(vocab, value);"
                      tal:replace="structure display" />

    <metal:edit_macro define-macro="edit">
      <metal:use use-macro="field_macro | context/widgets/field/macros/edit">
        <metal:fill fill-slot="widget_body"
                    tal:define="vocab python:field.Vocabulary(here);">

          <script type="text/javascript" 
                  tal:define="rows python:['{id:%s,name:\'%s\'}'%(item,vocab.getValue(item)) for item in value ];
                              single_line python:'[%s]'%','.join(rows);
                              json_url string:${context/absolute_url}/multitree_json_view"
                  tal:content="string:input_name='#$fieldName'; prePopulate=$single_line; json_url='$json_url'">
          </script>

          <script type="text/javascript">
            $(document).ready(function () {          
              jq(input_name).tokenInput(json_url,{
                prePopulate:prePopulate
              });

            });
          </script>

          <input type="text"
                tal:attributes="name fieldName;
                                id fieldName;" />
        </metal:fill>
      </metal:use>
    </metal:edit_macro>

    <div metal:define-macro="search">
      <div metal:use-macro="context/widgets/multitreewidget/macros/edit">
      </div>
    </div>

    <div metal:define-macro="hidden">
      <input type="hidden"
             name=""
             value=""
             tal:attributes="name string:${fieldName}:lines;
                             value python:'\n'.join(value);" />
    </div>
  </body>

</html>
